{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
